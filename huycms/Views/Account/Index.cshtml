@model huycms.Models.AccountViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}
<div class="page-header">
    <h2>Account</h2>
</div>
<input type="button" class="btn btn-primary" value="Create" onclick="@Url.Action()" />
<table id="dtbaccount" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model.ListAccount)
        {
            <tr>
                <td>@acc.Username</td>
                <td>@acc.Password</td>
            </tr>
        }

    </tbody>
</table>

<script>
    $(document).ready(function () {
        var sZeroRecords = "No discount was found.";
        var sEmptyTable = "No discount was found.";
        var sInfoEmpty = ""

        $('#dtbaccount').dataTable({
            "pagingType": "full_numbers",
            "bSortClasses": false,
            "order": [[1, "desc"]],
            "dom": 'T<"clear">lfrtip',
            "iDisplayLength": 10,
            "bLengthChange": true,
            "sDom": '<"top"f>rt<"bottom"ip><"clear">',
            "columns": [
              { "width": "50%" },
              { "width": "50%" }
            ],
            "oLanguage": {
                "oPaginate": {
                    "sFirst": "<i class='fa fa-angle-double-left'></i>", // This is the link to the first page
                    "sPrevious": "<i class='fa fa-angle-left'></i>", // This is the link to the previous page
                    "sNext": "<i class='fa fa-angle-right'></i>", // This is the link to the next page
                    "sLast": "<i class='fa fa-angle-double-right'></i>"
                },
                "sInfoFiltered": "",
                "sInfo": "_START_ - _END_ of _TOTAL_",
                "sInfoEmpty": sInfoEmpty,
                "sEmptyTable": sEmptyTable,
                "sZeroRecords": sZeroRecords,
            }
        });
    });
</script>