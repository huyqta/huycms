@model huycms.Models.AccountViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}
@Html.BeginForm()
<div class="page-header">
    <h2>Edit Account</h2>
</div>
<div class="row">
    <div class="col-md-3">
        <h3>Account information</h3>
    </div>
    <div class="col-md-9">
        <div class="form-group">
            @if (Model.ActionState == huycms.Models.BaseViewModel.ActionState.Create || Model.ActionState == huycms.Models.BaseViewModel.ActionState.Edit)
            {
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username)
                @Html.ValidationMessage("Username is must.")
            }

        </div>
        <div class="form-group">
            @if (Model.ActionState == huycms.Models.BaseViewModel.ActionState.Create || Model.ActionState == huycms.Models.BaseViewModel.ActionState.Edit)
            {
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password)
                @Html.ValidationMessage("Password is must.")
            }
        </div>
        <div class="form-group">
            @if (Model.ActionState == huycms.Models.BaseViewModel.ActionState.Create || Model.ActionState == huycms.Models.BaseViewModel.ActionState.Edit)
            {
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.TextBoxFor(m => m.ConfirmPassword)
                @Html.ValidationMessage("ConfirmPassword is must.")
            }
        </div>
    </div>
</div>
